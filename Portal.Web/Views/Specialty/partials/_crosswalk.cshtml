@model Portal.Common.ViewModels.SpecialtyCrosswalkViewModel
@using Portal.Common.Enums

@section scripts{
    <script src="~/Views/Specialty/js/SpecialtyDirectory-Datatable.js"></script>
    @*<script src="~/Views/Specialty/js/DirectoryLanguage-Datatable.js"></script>*@
}


<form method="post">
    <div class="row">
        <input asp-for="SpecialtyCrosswalk.SpecialtyId" />
        <div class="col-lg-12">
            <!--begin::Portlet-->
            <div class="kt-portlet kt-portlet--last kt-portlet--head-lg kt-portlet--responsive-mobile" id="kt_page_portlet">
                <div class="kt-portlet__head kt-portlet__head--lg">
                    <div class="kt-portlet__head-label">

                        @{
                            if (Model.ActionType == ActionType.Add)
                            {
                                <h3 class="kt-portlet__head-title">New Crosswalk</h3>
                            }

                            else
                            {
                                <h3 class="kt-portlet__head-title">
                                    Crosswalk Id:<small>Some Value here</small>
                                </h3>
                            }
                        }

                    </div>
                    <div class="kt-portlet__head-toolbar">
                        @{
                            if (Model.ActionType == ActionType.Edit || Model.ActionType == ActionType.Add)
                            {
                                <a href="/Specialty/list" class="btn btn-brand kt-margin-r-10">
                                    <i class="la la-remove"></i>
                                    <span class="kt-menu__link-text">Cancel</span>
                                </a>
                                <button asp-controller="Specialty" asp-action="Save" type="submit" class="btn btn-brand">
                                    <i class="la la-check"></i>
                                    <span class="kt-hidden-mobile">Save</span>
                                </button>
                            }
                            else
                            {
                                <button asp-controller="Specialty" asp-action="Edit" type="submit" class="btn btn-clean kt-margin-r-10">
                                    <i class="la la-pencil"></i>
                                    <span class="kt-hidden-mobile">Edit</span>
                                </button>
                            }
                        }
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <div class="kt-form kt-form--fit kt-form--label-right" id="kt_form">
                        <div class="row">
                            <div class="col-xl-2"></div>
                            <div class="col-xl-8">
                                <!--1st Segment: Specialty Demographics-->
                                <div class="kt-section kt-section--first">
                                    <div class="kt-section__body">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <h3 class="kt-section__title kt-section__title-lg">Specialty Demographics</h3>

                                        <!--Specialty & Qnxt Specialty Code-->
                                        <div class="form-group row">
                                            <label class="col-lg-2 col-form-label">QNXT Specialty:</label>
                                            <div class="col-lg-3">
                                                @*This field is Specialty but uses the SpecialtyCode validation from the model.*@
                                                <h6 class="col-form-label">@Model.SpecialtyDemographics.SpecialtyName</h6>


                                                @*<select id="ddlSpecialty" asp-for="SpecialtyCrosswalk.SelectSpecialtyValue" asp-items="Model.SelectSpecialties" class="form-control" disabled="@(Model.ActionType == ActionType.Add ? null : "disabled")">
                                                        <option disabled selected>--- SELECT ---</option>
                                                    </select>
                                                    <span asp-validation-for="SpecialtyCrosswalk.SelectSpecialtyValue" class="text-danger"></span>*@
                                            </div>
                                            <label class="col-lg-2 col-form-label">QNXT Specialty Code:</label>
                                            <div class="col-lg-3">
                                                <h6 class="col-form-label">@Model.SpecialtyDemographics.SpecialtyCode</h6>

                                                @*<input asp-for="SpecialtyDemographics.SpecialtyCode" class="form-control" placeholder="Select a specialty" disabled="@(Model.ActionType == ActionType.Add ? null : "disabled")" />
                                                    <span asp-validation-for="SpecialtyCrosswalk.SpecialtyCode" class="text-danger"></span>*@
                                            </div>
                                        </div>
                                        <!--Company & Line of Business-->
                                        <div class="form-group row">
                                            <label class="col-lg-2 col-form-label">Company:</label>
                                            <div class="col-lg-3">
                                                <select asp-for="SpecialtyCrosswalk.CompanyId" asp-items="Model.SelectCompanies" class="form-control" disabled="@(Model.ActionType == ActionType.Add ? null : "disabled")">
                                                    <option disabled selected>--- SELECT ---</option>
                                                </select>
                                                <span asp-validation-for="SpecialtyCrosswalk.CompanyId" class="text-danger"></span>
                                            </div>
                                            <label class="col-lg-2 col-form-label">Line of Business:</label>

                                            <div class="col-lg-3">
                                                <select asp-for="SpecialtyCrosswalk.LineOfBusinessId" asp-items="Model.SelectLineOfBusinesses" class="form-control" disabled="@(Model.ActionType == ActionType.Add ? null : "disabled")">
                                                    <option disabled selected>--- SELECT ---</option>
                                                </select>
                                                <span asp-validation-for="SpecialtyCrosswalk.LineOfBusinessId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <!-- Effective Date & End Date -->
                                        @*<div class="form-group row">
                                                <label class="col-lg-2 col-form-label">Effective Date:</label>
                                                <div class="col-lg-3">
                                                    <input asp-for="SpecialtyCrosswalk.EffectiveDate" class="form-control" disabled="@(Model.ActionType == ActionType.View ? "disabled" : null)" />
                                                    <span asp-validation-for="SpecialtyCrosswalk.EffectiveDate" class="text-danger"></span>
                                                </div>
                                                <label class="col-lg-2 col-form-label">End Date:</label>
                                                <div class="col-lg-3">
                                                    <input asp-for="SpecialtyCrosswalk.EndDate" class="form-control" disabled="@(Model.ActionType == ActionType.View ? "disabled" : null)" />
                                                    <span asp-validation-for="SpecialtyCrosswalk.EndDate" class="text-danger"></span>
                                                </div>
                                            </div>*@
                                        <!--Language-->
                                        <div class="form-group row form-group-last">
                                            <label class="col-lg-2 col-form-label">Language:</label>
                                            <div class="col-lg-3">

                                                <select asp-for="SpecialtyCrosswalk.LanguageId" asp-items="Model.SelectLanguages" class="form-control" disabled="@(Model.ActionType == ActionType.Add ? null : "disabled")">
                                                    <option disabled selected>--- SELECT ---</option>
                                                </select>
                                                <span asp-validation-for="SpecialtyCrosswalk.LanguageId" class="text-danger"></span>

                                            </div>
                                        </div>
                                        <!--Directory Specialty Name-->
                                        @*<div class="form-group row ">
                                                <label class="col-lg-2 col-form-label">Directory Specialty Name:</label>
                                                <div class="col-lg-8">
                                                    <input asp-for="SpecialtyCrosswalk.SpecialtyName" class="form-control" disabled="@(Model.ActionType == ActionType.View ? "disabled" : null)" />
                                                    <span asp-validation-for="SpecialtyCrosswalk.SpecialtyName" class="text-danger"></span>
                                                </div>


                                            </div>*@
                                        @*<div class="form-group row form-group-last">

                                                <label class="col-lg-2 col-form-label">Directory Display:</label>
                                                <div class="col-lg-3">
                                                    <span class="kt-switch">
                                                        <label>
                                                            <input type="checkbox" asp-for="SpecialtyCrosswalk.DirectoryDisplayFlag" checked="@(Model.SpecialtyCrosswalk.DirectoryDisplayFlag == "true" ? "checked" : null)" disabled="@(Model.ActionType == ActionType.View ? "disabled" : null)" />
                                                            <span></span>

                                                        </label>
                                                    </span>
                                                </div>
                                            </div>*@
                                    </div>
                                </div>
                                <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg"></div>
                                <!--2nd Segment: Directory Section-->
                                <div class="kt-section">
                                    <div class="kt-section__body">
                                        <h3 class="kt-section__title kt-section__title-lg">Directory Section</h3>
                                        <div class="form-group row">
                                            <div class="col-lg-1"></div>
                                            <div class="col-lg-10">
                                                <table class="kt-datatable" id="dtSpecialtyDirectory"></table>
                                            </div>
                                            <div class="col-lg-1"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg"></div>
                                <!--3rd Segment: Directory Language-->
                                <div class="kt-section kt-section--last">
                                    <div class="kt-section__body">
                                        <h3 class="kt-section__title kt-section__title-lg">Directory Language</h3>
                                        <div class="form-group row">
                                            <div class="col-lg-1"></div>
                                            <div class="col-lg-10">
                                                <table class="kt-datatable" id="dtDirectoryLanguage"></table>
                                            </div>
                                            <div class="col-lg-1"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-2"></div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Portlet-->
        </div>
    </div>
</form>
