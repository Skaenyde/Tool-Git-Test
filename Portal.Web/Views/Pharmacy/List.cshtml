@section css{
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css">
    <link href="~/css/plugins/select2.css" rel="stylesheet" type="text/css">

}

@section vendors {
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js" type="text/javascript"></script>

}

@section scripts{
    <script src="~/js/plugins/moment.min.js" type="text/javascript"></script>
    <script src="~/js/plugins/datetime.js" type="text/javascript"></script>
    <script src="~/js/Pharmacies-Datatable.js" type="text/javascript"></script>
    <script src="~/js/plugins/select2.min.js" type="text/javascript"></script>
}

<div class="row">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-list-3"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Pharmacies
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <div class="kt-portlet__head-wrapper">
                    <div class="kt-portlet__head-actions">
                        @*<a href="~/Add" class="btn btn-brand btn-elevate btn-icon-sm">
                                <i class="la la-plus"></i>
                                Add new
                            </a>*@
                    </div>
                </div>
            </div>
        </div>

        <div class="kt-portlet__body">
            <!--begin: Search Form -->
            <div class="kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10">
                <div class="row align-items-center">
                    <div class="col-xl-10 order-2 order-xl-1">
                        <div class="row align-items-center">
                            <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-input-icon kt-input-icon--left">
                                    <input type="text" class="form-control" placeholder="Search by pharmacy name" id="SearchString">
                                    <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-form__group kt-form__group--inline">
                                    <div class="kt-form__label">
                                        <label>Company:</label>
                                    </div>
                                    <div class="kt-form__control">

                                        @* <div class="dropdown bootstrap-select form-control">  *@
                                        <select id="ddlCompany" asp-items="Model.SelectCompanies" class="form-control bootstrap-select">
                                            <option value="">All</option>
                                        </select>

                                    @*</div>*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-form__group kt-form__group--inline">
                                    <div class="kt-form__label">
                                        <label>LoB:</label>
                                    </div>
                                    <div class="kt-form__control">
                                        @*<div class="dropdown bootstrap-select form-control">*@
                                            <select id="ddlLoB" asp-items="Model.SelectLineOfBusinesses" class="form-control bootstrap-select">
                                                <option value="">All</option>
                                            </select>
                                        @*</div>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 order-1 order-xl-2 kt-align-right">
                        <a href="#" class="btn btn-default" id="btnClear">
                                <i class="la la-close"></i> Clear
                            </a>
                        <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg d-xl-none"></div>
                    </div>
                </div>
            </div>
            <div class="kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10">
                <div class="row align-items-center">
                    <div class="col-xl-10 order-2 order-xl-1">
                        <div class="row align-items-center">
                            <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-form__group kt-form__group--inline">
                                    <div class="kt-form__label">
                                        <label>County:</label>
                                    </div>
                                    <div class="kt-form__control">

                                        @*<div class="dropdown bootstrap-select form-control">*@
                                            @*/*TAKE THIS OUT FOR MULTIPLE SELECT*/*@
                                            @*<select id="ddlCounty" asp-items="Model.SelectCounty" auto style="width: 100%" multiple="multiple">
            <option value="">All</option>
        </select>*@
                                            <select id="ddlCounty"  auto style="width: 100%" multiple="multiple"></select>
                                        @*</div>*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-form__group kt-form__group--inline">
                                    <div class="kt-form__label">
                                        <label>State:</label>
                                    </div>
                                    <div class="kt-form__control">
                                        @*<div class="dropdown bootstrap-select form-control">*@

                                            <select id="ddlState" asp-items="Model.SelectState" auto style="width: 100%" multiple="multiple" >
                                                
                                            </select>
                                        @*</div>*@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-form__group kt-form__group--inline">
                                    <div class="kt-form__label">
                                        <label>City:</label>
                                    </div>
                                    <div class="kt-form__control">
                                        <select id="ddlCity" asp-items="Model.SelectCity" auto style="width: 100%" multiple="multiple" >
                                            <option value="">All</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-2 order-1 order-xl-2 kt-align-right">

                        <div class="kt-separator kt-separator--border-dashed kt-separator--space-lg d-xl-none"></div>
                    </div>
                </div>
            </div>		<!--end: Search Form -->
        </div>
        <div class="kt-portlet__body kt-portlet__body--fit">
            <!--begin: Datatable -->
            <table class="kt-datatable" id="dtPharmacies"></table>
            <!--end: Datatable -->
        </div>
    </div>

</div>